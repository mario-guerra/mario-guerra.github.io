---
// Define props for the CTA section
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonLink: string;
}

// Destructure props from Astro
const {
  title,
  description,
  buttonText = "Contact Me", // Default button text if not provided
  buttonLink = "/contact"  // Default button link if not provided
} = Astro.props as Props;
---

<section class="py-12 bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 text-neutral-900 dark:text-neutral-100">
  <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl font-extrabold mb-4">{title}</h2>
    <p class="text-lg mb-8">{description}</p>
    <a 
      href={buttonLink} 
      class="sl-link-button secondary"
    >
      {buttonText}
    </a>
  </div>
</section>
