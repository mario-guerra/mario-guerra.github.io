  title: string;
  description: string;
}

const portfolioItems: PortfolioItem[] = [
  {
    title: "TypeSpec at Microsoft",
    description: "Product Manager for TypeSpec at Microsoft, enabling Azure to ship client libraries faster by providing a powerful language for API-first development.",
  },
  {
