---
// Props for the CardDocumentation component
interface Props {
  doc: {
    title: string;
    description: string;
    url: string;
    heroImage?: string;
  };
}

const { doc } = Astro.props;
---

<a
  href={doc.url}
  class="block rounded-lg border border-neutral-200 bg-white shadow-md hover:shadow-lg dark:border-neutral-700 dark:bg-neutral-800"
>
  <img
    src={doc.heroImage}
    alt={doc.title}
    class="w-full h-48 object-cover rounded-t-lg"
  />
  <div class="p-6">
    <h2 class="text-xl font-bold text-neutral-800 dark:text-neutral-200">
      {doc.title}
    </h2>
    <p class="mt-2 text-neutral-600 dark:text-neutral-400">
      {doc.description}
    </p>
  </div>
</a>
