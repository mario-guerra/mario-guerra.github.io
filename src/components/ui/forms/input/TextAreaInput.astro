---
interface Props {
  label: string;
  name?: string;
    id?: string;
  required?: boolean;
    rows?: number;
}

const { label, id, name, required, rows } = Astro.props;
const finalRows = rows ?? 3;
const finalId = id ?? label.toLowerCase().replace(/ /g, '-');
const finalName = name ?? label.toLowerCase().replace(/ /g, '-');
---

<div class="mt-4">
  <label for={finalId} class="block text-sm font-medium text-gray-700 dark:text-gray-300">
    {label} {required && <span class="text-red-500">*</span>}
  </label>
  <textarea
    id={finalId}
      name={finalName}
      required={required}
      rows={finalRows}
    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm dark:bg-neutral-700 dark:border-neutral-600 dark:text-neutral-200"
    />
</div>